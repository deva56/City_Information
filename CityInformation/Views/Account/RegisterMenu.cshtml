@{
    ViewBag.Title = "Registracija";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}

<br />
<br />
<h2 class="text-center" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif"><u>Registracija</u></h2>
<hr />
<br />


<div style="display:inline-flex" class="text-center col-md-12">

    <div class="col-md-6">
        <a href="@Url.Action("RegisterPoduzeće", "Account")"><input type="button" class="btn btn-primary" value="Registriraj se kao poduzeće"></a>
    </div>
    <div class="col-md-6">
        <a href="@Url.Action("RegisterKorisnik", "Account")"><input type="button" class="btn btn-primary" value="Registriraj se kao korisnik"></a>
    </div>

</div>

<h3 class="text-center" style="margin-top:150px">Već ste registrirani? Prijavite se.</h3>
<br />
<div class="col-md-12 text-center">
    <a href="@Url.Action("Login", "Account")"><input type="button" class="btn btn-primary" value="Prijavi se"></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
