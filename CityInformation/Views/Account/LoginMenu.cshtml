@{
    ViewBag.Title = "Logiranje";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}

<br />
<br />
<h2 class="text-center" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif"><u>Prijava</u></h2>
<hr />
<br />


<div style="display:inline-flex" class="text-center col-md-12">

    <div class="col-md-6">
        <a href="@Url.Action("LoginPoduzeće", "Account")"><input type="button" class="btn btn-primary" value="Prijavi se kao poduzeće"></a>
    </div>
    <div class="col-md-6">
        <a href="@Url.Action("LoginKorisnik", "Account")"><input type="button" class="btn btn-primary" value="Prijavi se kao korisnik"></a>
    </div>

</div>

<h3 class="text-center" style="margin-top:150px">Niste još registrirani? Registrirajte se.</h3>
<br />
<div class="col-md-12 text-center">
    <a href="@Url.Action("Register", "Account")"><input type="button" class="btn btn-primary" value="Registriraj se"></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
