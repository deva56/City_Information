@model CityInformation.Models.grad

@{
    ViewBag.Title = "Uređivanje podataka o gradu";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<br />
<br />
<h2 class="text-center">Uređivanje podataka o gradu iz baze</h2>


@using (Html.BeginForm("EditGrad", "Administrator", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idGrad)

            <div class="form-group col-md-12">
                @Html.Label("Ime grada", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.imeGrad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imeGrad, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-12">
                <div>
                    @Html.Label("Ime županije", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="dropdown" style="width:300px">
                    @Html.DropDownListFor(model => model.idŽupanija, (SelectList)ViewBag.idŽupanija, htmlAttributes: new { @class = "form-control dropdown-select" })
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.idŽupanija, "", new { @class = "text-danger" })
                </div>
            </div>

        </center>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" value="Spremi" class="btn btn-primary" />
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

}

<div>
    @Html.ActionLink("Natrag", "GlavniMeni")
</div>

