@model CityInformation.Models.grad

@{
    ViewBag.Title = "Dodavanje novog grada";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />
<br />
<h2 class="text-center">Dodaj novi grad u bazu</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <hr />

    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-md-12">
                @Html.Label("Ime grada:", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.imeGrad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ime grada" } })
                @Html.ValidationMessageFor(model => model.imeGrad, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-12">
                <div>
                    @Html.Label("Ime županije", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="dropdown" style="width:300px">
                    @Html.DropDownListFor(model => model.idŽupanija, (SelectList)ViewBag.idŽupanija, htmlAttributes: new { @class = "form-control dropdown-select" })
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.idŽupanija, "", new { @class = "text-danger" })
                </div>
            </div>

        </center>
    </div>
    <br />
    <div class="form-group text-center">
        <div class="col-md-12">
            <input type="submit" value="Kreiraj" class="btn btn-primary" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Natrag", "GlavniMeni")
</div>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Ne možete kreirati grad jer još nemate županiju u bazi!");
        };
    </script>
}
