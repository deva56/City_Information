@model IEnumerable<CityInformation.Models.recenzija>

@{
    ViewBag.Title = "Lista recezija za odobravanje";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<br />
<br />
<br />
<h2 class="text-center">Lista recenzija za odobravanje</h2>
<hr />
<div>
    @Html.ActionLink("Natrag", "GlavniMeni")
</div>
<br />
<br />

@if (Model.Count() == 0)
{
    <h2 class="text-center">Nema recenzija za odobravanje.</h2>
}
else
{
    <table class="table">
        <tr>
            <th class="text-center">
                Autor recenzije
            </th>
            <th class="text-center">
                Recenzija poduzeća
            </th>
            <th class="text-center">
                Datum recenzije
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.korisnik.korisničkoImeKorisnik)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.poduzeće.imePoduzeće)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.datumRecenzija)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Odobri recenziju", "OdobriRecenziju", new { id = item.idRecenzija })
                </td>
            </tr>
        }

    </table>

}

