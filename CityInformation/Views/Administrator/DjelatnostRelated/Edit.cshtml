@model CityInformation.Models.djelatnost

@{
    ViewBag.Title = "Uređivanje podataka o djelatnosti";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<br />
<br />
<h2 class="text-center">Uređivanje podataka o djelatnosti iz baze</h2>


@using (Html.BeginForm("EditDjelatnost", "Administrator", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idDjelatnost)

            <div class="form-group col-md-12">
                @Html.Label("Ime djelatnosti", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.imeDjelatnost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imeDjelatnost, "", new { @class = "text-danger" })
            </div>
        </center>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" value="Spremi" class="btn btn-primary" />
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

}

<div>
    @Html.ActionLink("Natrag", "GlavniMeni")
</div>

