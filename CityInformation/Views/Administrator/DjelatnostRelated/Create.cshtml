@model CityInformation.Models.djelatnost

@{
    ViewBag.Title = "Kreiranje nove djelatnosti";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />
<br />
<h2 class="text-center">Kreiraj novu djelatnost u bazi</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <hr />

    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-md-12">
                @Html.Label("Ime djelatnosti:", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.imeDjelatnost, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kafić, restoran i sl...." } })
                @Html.ValidationMessageFor(model => model.imeDjelatnost, "", new { @class = "text-danger" })
            </div>
        </center>
    </div>
    <br />
    <div class="form-group text-center">
        <div class="col-md-12">
            <input type="submit" value="Kreiraj" class="btn btn-primary" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Natrag", "GlavniMeni")
</div>
