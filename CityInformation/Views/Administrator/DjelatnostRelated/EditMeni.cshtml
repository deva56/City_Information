@model CityInformation.Models.djelatnost

@{
    ViewBag.Title = "Uređivanje podataka o djelatnosti";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />
<br />
<h2 class="text-center">Uređivanje podataka o djelatnosti iz baze</h2>

@using (Html.BeginForm("EditDjelatnostGet", "Administrator"))
{
    @Html.AntiForgeryToken()


    <hr />

    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-md-12">
                <div>
                    @Html.Label("Ime djelatnosti", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="dropdown" style="width:300px">
                    @Html.DropDownListFor(model => model.idDjelatnost, (SelectList)ViewBag.idDjelatnost, htmlAttributes: new { @class = "form-control dropdown-select" })
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.idDjelatnost, "", new { @class = "text-danger" })
                </div>
            </div>

        </center>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" value="Ažuriraj" class="btn btn-primary" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Natrag", "GlavniMeni")
</div>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Ne možete ažurirati djelatnost u bazi jer još ništa nemate u bazi!");
        };
    </script>
}
