@model CityInformation.Models.djelatnost

@{
    ViewBag.Title = "Brisanje djelatnosti";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />
<br />
<h2 class="text-center">Brisanje djelatnosti iz baze</h2>

@using (Html.BeginForm("DeleteDjelatnost", "Administrator", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.idDjelatnost)
    <hr />
    <h2 class="text-center">Jeste li sigurni da želite obrisati ovu djelatnost iz baze?</h2>
    <center>
        <h3>Ime djelatnosti: @Model.imeDjelatnost</h3>
    </center>
    <br />
    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" value="Potvrdi brisanje" class="btn btn-primary" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Natrag", "GlavniMeni")
</div>
