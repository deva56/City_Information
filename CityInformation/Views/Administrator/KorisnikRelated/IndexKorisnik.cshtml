@model IEnumerable<CityInformation.Models.korisnik>

@{
    ViewBag.Title = "Lista korisnika";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";

}

<br />
<br />
<h2 class="text-center">Lista korisnika u bazi</h2>
<div>
    @Html.ActionLink("Kreiraj novog korisnika", "CreateKorisnik")
</div>
<br />
<br />

<table class="table">
    <tr>
        <th class="text-center">
            Korisničko ime korisnika
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.korisničkoImeKorisnik)
            </td>
            <td class="text-center">
                @Html.ActionLink("Promijeni lozinku", "ChangePasswordKorisnik", new { id = item.idKorisnik }) |
                @Html.ActionLink("Obriši", "DeleteKorisnik", new { id = item.idKorisnik })
            </td>
        </tr>
    }

</table>
